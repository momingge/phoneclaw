<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">


    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#1e1e2e"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="#3d4354"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="System Status"
                        android:textSize="18sp"
                        android:textColor="#cdd6f4"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Initializing voice automation system..."
                        android:textSize="14sp"
                        android:textColor="#a6e3a1"
                        android:background="@drawable/status_background"
                        android:padding="12dp"
                        android:drawablePadding="8dp" />
<!-- Add this FloatingActionButton to your existing layout -->
<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
    android:id="@+id/microphoneButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:layout_marginTop="24dp"
    android:text="ðŸŽ¤ Tap to Speak"
    android:textSize="16sp"
    app:icon="@android:drawable/ic_btn_speak_now"
    app:backgroundTint="#89b4fa"
    app:elevation="6dp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clearScheduleButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Clear Schedule"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="#f38ba8"
                    app:cornerRadius="12dp"
                    app:elevation="4dp"
                    style="@style/Widget.Material3.Button.UnelevatedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/refreshButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Refresh"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="#89b4fa"
                    app:cornerRadius="12dp"
                    app:elevation="4dp"
                    style="@style/Widget.Material3.Button.UnelevatedButton" />

            </LinearLayout>

            <!-- Tab Layout -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/tab_background"
                app:tabTextColor="#bac2de"
                app:tabSelectedTextColor="#cdd6f4"
                app:tabIndicatorColor="#89b4fa"
                app:tabIndicatorHeight="3dp"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabRippleColor="#45475a">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scheduled Tasks" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generation History" />

            </com.google.android.material.tabs.TabLayout>

            <!-- Content ViewPager -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@drawable/content_background" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>